	  System.out.println("-------------6)Back---------------");
	  
		System.out.println("Enter the choice"); 
		int choice=sc.nextInt();
		switch(choice)
		{
		case 1:pimpl.addProduct();
			break;
		case 2:List<Product> p=pimpl.viewAllProduct();
		if(p!=null)
		{
		System.out.println("Product List");
