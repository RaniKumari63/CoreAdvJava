		{  if(p1!=null) {
			System.out.println(p1.getPid()+"\t"+p1.getPname()+"\t"+p1.getPrice()+"\t"+p1.getQty());
		}
			
		}
		}
		else
		{
			System.out.println("Record Doesn't exist");
			
		}
			break;
		case 3:
			break;
		case 4:
			break;
		case 5:
			break;
		case 6:
			break;
			default:
				
		}
	 }
}
