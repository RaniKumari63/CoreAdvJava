package fundamental;

public class Pizza {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int pizzacost =300;
		int totalpizzacost=0;
		double discount=0;
		double amountpaid=0;
		totalpizzacost=pizzacost*2;
		System.out.println(totalpizzacost);
		discount=totalpizzacost*(0.2);
		System.out.println(discount);
		amountpaid=(pizzacost*2)-(totalpizzacost*(0.2));
		System.out.println(amountpaid);
		

	}

}
