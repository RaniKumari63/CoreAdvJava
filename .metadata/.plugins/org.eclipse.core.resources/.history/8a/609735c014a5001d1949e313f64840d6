					 Product pro=new Product(pid,pname,pqty,pprice);
					int count= daoimpl.addProducts(pro);
					if(count!=0)
					 
					{
						System.out.println("Data Inserted Successfully");
					}
					else
					{
						System.out.println("Data Not Inserted Successfully");
					}
					
					 break;
				 case 2:List<Product> viewAllProducts=daoimpl.viewAllProducts();
				 viewAllProducts.stream().forEach(prod->System.out.println(prod.getPid()+"\t"+prod.getPname()+"\t"+prod.getPqty()+"\t"+prod.getPprice()));
				 break;
				 case 3:System.out.println("Enter Product Id");
					 Product=
				 }
				
			}
