package fundamental;

public class Pizza {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int pizza =300;
		int totalpizza=0;
		double discount=0;
		double amount=0;
		totalpizza=pizza*2;
		System.out.println(totalpizza);
		discount=totalpizza*(0.2);
		System.out.println(discount);
		amount=totalpizza-discount;
		System.out.println(amount);
		

	}

}
