package com.java8features;

import java.util.ArrayList;

class Employee{
	String name;
	double salary;
	public Employee() {
		super();
		// TODO Auto-generated constructor stub
	}
	public Employee(String name, double salary) {
		super();
		this.name = name;
		this.salary = salary;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getSalary() {
		return salary;
	}
	public void setSalary(double salary) {
		this.salary = salary;
	}
}

public class Test17 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		ArrayList<Employee> a1=new ArrayList<Employee>();
		a1.add(new Employee("shiva",2500));
		a1.add(new Employee("rani",3500));
		a1.add(new Employee("lilly",3500));
		a1.add(new Employee("aaaa",4500));
		a1.add(new Employee("bbbb",5500));
		a1.add(new Employee("cccc",6500));
		for(Employee emp:a1)
		{
			if(emp.salary>3000)
			{
				System.out.println(emp.name+"\t"+emp.salary);
			}
		}
		
		
		
		
	}

}
